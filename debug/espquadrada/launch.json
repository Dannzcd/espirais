{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${cwd}/trab_loureiro/output/espquadrada", // Ajuste para o caminho do seu execut√°vel
            "args": [],
            "stopAtEntry": false,
            "environment": [],
            "cwd": ".",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // Caminho para o gdb
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build" // Isso executa a tarefa 'build' antes de iniciar o debug
        }
    ]
}